<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.kamili.rachid.celebrityapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CelebritiesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewCelebrityActivity"
            android:label="@string/title_activity_new_celebrity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditCelebrityActivity"
            android:label="@string/title_activity_edit_celebrity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>